<div style="padding-top:30px; min-height:500px;" id="dg ">
    <div class="container">

        <% @tickets.each do |ticket| %>
            <div style="text-align:center;" id="ticketz" class="col-lg-4 team">
                <span style="height:50px; width:50px;" class="img-circle"> <%= image_tag 'ticket.png' %></span>
                  <h5 style="margin-bottom:-1px;"><%= ticket.event.name %></h5>
                  <!-- <h5><i></i></h5> -->
                  <p style="margin-bottom:-1px; margin-top:2px;" id="tixdate"><%= ticket.event.eventday.month %> <%= ticket.event.eventday.date %></p>
                  <p style=" margin-bottom:-1px; margin-top:3px;"><%= ticket.event.start_time %></p>
                  <p style="margin-top:2px; margin-bottom:-1px;"><%= number_to_currency(ticket.price)  %></p>
                  <p><%= ticket.event.einfo %></p>
                   
                  <p>
                  <form action="https://www.sandbox.paypal.com/cgi-bin/webscr" method="post" target="_top">
                    <input type="hidden" name="cmd" value="_s-xclick">
                    <input type="hidden" name="hosted_button_id" value="GFKMZE4L27UUW">
                    <input type="image" src="https://www.sandbox.paypal.com/en_US/i/btn/btn_buynow_SM.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
                    <img alt="" border="0" src="https://www.sandbox.paypal.com/en_US/i/scr/pixel.gif" width="1" height="1">
                  </form>
                   <p><%#= render :partial => 'paypal', :locals => { :ticket => ticket } %></p> 

                  </p>
                </div>

        <%end%>
        
    </div>
</div>
  



