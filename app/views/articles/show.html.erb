<div id="artnew" class='large-12 large-centered columns'> 
  <p id="notice"><%= notice %></p>

  <p>
    <b>Title:</b>
    <%= @article.title %>
  </p>

  <p>
    <b>Author:</b>
    <%= @article.author %>
  </p>

  <p>
    <b>Published:</b>
    <%= @article.published %>
  </p>

  <p>
    <b>Photo:</b>
    <%= @article.photo %>
  </p>

  <p>
    <b>Link:</b>
    <%= @article.link %>
  </p>
</div>
<div class='large-4 large-centered columns'> 
  <span class="newnews"><%= link_to 'Edit', edit_article_path(@article) %></span> |
  <span class="newnews"><%= link_to 'Back', articles_path %></span>
</div>