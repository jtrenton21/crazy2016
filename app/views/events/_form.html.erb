      <% end %>
      </ul>
    </div>
  <% end %>
<div class ='tedform2'>
      <div class="row centered">
        
  <div class="field">
    <span class='eventlab'>Event Name</span><br/>
   <p id='calname'> <%= f.text_field :name %></p>
  </div>
  <div class="field">
   <span class='eventlab'>Event Date</span><br/>
