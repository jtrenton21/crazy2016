    <span class='eventlab'>Start Time</span><br/>
 <p id='caltime'> <%= f.select :start_time, collection: ["12:00 PM", "1:00 PM", "2:00 PM", "3:00 PM", "4:00 PM", "5:00 PM" ,"6:00 PM", "7:00 PM", "8:00 PM", "9:00 PM", "10:00 PM", "11:00 PM", "12:00 AM", "1:00 AM", "2:00 AM", "3:00 AM", "4:00 AM", "5:00 AM" ,"6:00 AM", "7:00 AM", "8:00 AM", "9:00 AM", "10:00 AM", "11:00 AM" ]%></p>
  </div><br/>
  <div class="field">
   <span class='eventlab'>Address</span><br/>
  <p id='calplace'>  <%= f.text_field :address %></p>
  </div>
  <div class="field">
    <span class='eventlab'>Event Description</span><br/>
  <p id='calinfo'>  <%= f.text_area :einfo %></p>
  </div>
  <div class="actions">
 <%= f.submit %>
  </div>
