<div id="dg">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-md-12"><% x = 0 %>  
        <h2 class="red">EVENT SCHEDULE</h2><br/>
        <a data-toggle="modal" data-target="#myModal<%= x %>" href="#myModal<%= x %>"></a>
          <%=render 'new' %>
        <table  class="table table-bordered table-responsive"> 
          <thead>
            <tr>
              <% @eventdays.each do |eventday|%>
                <th id='eventhead' class='thevent'><%eventday.id%><span class='eday'> <%=eventday.day%></span><br/><span class='edate'> <%=eventday.date%></span></th> 
              <%end%>
            </tr>
          </thead>
          <tbody>
            <tr>
              <% @eventdays.each do |eventday|%> 
                <td>
                  <ul class='elist'>
                    <% @events.each do |event| %>
                      <%if eventday.id == event.eventday_id%>
                        <li>
                          <a data-toggle="modal" data-target="#myModal<%= x %>" href="#myModal<%= x %>"><span class="textp"><%=event.name%><br/><%=event.start_time.strftime("%I:%M %P")%></span>
                          <a/>
                        </li>    
                        <div class="modal fade" id="myModal<%= x %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                          <div class="modal-dialog">
                            <div class="modal-content">
                              <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title" id="myModalLabel"><%=event.name%></h4>
                              </div>
                              <div class="modal-body">
                                <div class='row'>
                                  <p>
                                    <b class='eventb'>Date:</b>
                                    <span class='textp'><%= event.eventday.day %> <%= event.eventday.month %>  <%= event.eventday.date %>,<%= event.eventday.year %> </span>
                                  </p>
                                  <p>
                                    <b class='eventb'>Starts At:</b>
                                    <span class='textp'> <%= event.start_time.strftime("%I:%M %P")%> </span>
                                  </p>
                                  <p>
                                   <b class='eventb'>Location:</b>
                                   <span class='textp'> <%= event.address %> </span>
                                  </p>
                                  <p>
                                    <b class='eventb'>Details:</b><br/>
                                    <span class='textp'> <%= event.einfo %> </span>
                                  </p>
                                  <p>
                                    <span><a class= "btn btn-info"> Get Tickets</a> </span>
                                  </p>
                                </div>
                                  <p><%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{event.latitude}%2C#{event.longitude}" %></p><br/>
                              </div>
                            </div>
                          </div>
                        </div>
                      <%end%><% x += 1 %>
                    <%end%>
                  </ul>
                </td>
              <%end%>
            </tr>
          </tbody>
        </table>
      </div>
    </div><% x += 1 %>
  </div><!-- /container -->
</div><!-- /dg -->
  