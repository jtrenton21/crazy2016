<div id="dg">
  <div class="container">
    <div class="row centered">
      
       <%= link_to 'ADD NEW ARTICLE', new_article_path %>
          <table id="newsart" class="table table-bordered">
            <tr>
              <th>Image</th>
              <th>Title</th>
              <th>Author</th>
              <th>Date</th>
              <th>Link</th>
              <th>Show</th>
              <th>Edit</th>
              <th>Remove</th>
            </tr>
            <% @articles.each do |article| %>
              
                <tr>
                  <td id="newsphoto"><%= image_tag article.photo.url(:photo) %></td>
                    <td><%= article.title %></td>
                    <td><%= article.author %></td>
                    <td><%= article.published %></td>
                    <td><%#=article.link%></td>
                    <td><%= link_to 'Show', article %></td>
                    <td><%= link_to 'Edit', edit_article_path(article) %></td>
                    <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <%end%>  
            </table>
          
        </div>
      </div>
    </div>
               
        




