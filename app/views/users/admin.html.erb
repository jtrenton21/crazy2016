<div id="dg">
  <div class="container">
    <div class="row">
      <div class="col-lg-2"></div>
        <div class="col-lg-8">
          <div class="user_admin">
            <h3> ADMIN PANEL</h3>
            <% if current_user %>
                Logged in as <%= current_user.email %>.
                <%= link_to "Log Out", session_path("current"), method: "delete" %>
              <% else %>
                <%= link_to "Sign Up", new_user_path %> or
                <%= link_to "Log In", new_session_path %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>