<div class="panel-group" id="accordion">
  <div class="panel ">
    <div class="panel-heading">
      <h6 class="panel-title">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapseFour">
            <span style="font-size:18px;" class="red">MERCHANDISE CATEGORY</span><br/>
            <span style="font-size:14px;" class="red">Click to View</span><br/>
        </a>
      </h6>
    </div>
    <div id="collapseFour" class="accordion-body collapse">
      <div class="panel-body">
        <%= link_to 'ADD NEW CATEGORY', new_category_path %>
        <table id="newsart" class="table table-bordered">
                <tr>
                  <th>Name</th>
                  <th>View</th>
                  <th>Edit</th>
                  <th>Remove</th>
                </tr>
                <% @categories.each do |category| %>
                    <tr>
                        <td><%=category.name%></td>
                        <td><%= link_to 'View', category %></td>
                        <td><%= link_to 'Edit', edit_category_path(category) %></td>
                        <td><%= link_to 'Remove', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                  <%end%>  
              </table>
      </div>
    </div>
  </div>
</div>