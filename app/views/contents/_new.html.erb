<%= simple_form_for @content,:html => {:multipart => true} do |f| %>
  <%= f.error_notification %>
    <div class ='tedform'>
      <div class="row">
        <div id='cform' class="large-6 large-centered columns">
          <p>
             <span id='drop'>Select Related Visit</span><br/>
             <a><%= f.collection_select(:visit_id, Visit.all, :id, :location)%> </a>
          </p>
          
          <p>
            <span id='drop'>Title</span><br/>
            <%= f.input_field :title %>
          </p>
          <p>
            <span id='drop'>Name</span><br/>
            <%= f.input_field :author %>
          </p>
          <p>
            <span id='drop'><p id='pictext'>Please Select A Photo to Upload</p></span><br/>
            <%= f.file_field :photo %>
          </p>
          <p id='infoz'>
           <span id='drop'>Info</span><br/>
            <%= f.text_area :info, input_html: { wrap: 'hard' } %>
          </p>
          <div class="form-actions">
            <a class='buttonsub' id='fbutton'><%= f.button :submit %></a> 
          </div>
        </div>
      </div> 
      <% end %>
    </div>
      