<div style="min-height:500px;" id="dg ">
    <div class="container">
      <%= simple_form_for @product do |f| %>
        <p>
          <%= f.label :category_id %><br />
          <%= f.collection_select :category_id, Category.all, :id, :name %>
        </p>
        <p>
          <%= f.label :name %><br />
          <%= f.text_field :name %>
        </p>
        <p>
          <%= f.label "Amount" %><br />
          <%= f.input_field :price %>
        </p>
        <p>
          <%= f.label :description %><br />
          <%= f.text_area :description %>
        </p>
        <p><%= f.submit "Submit" %></p>
      <% end %>
    </div>
  </div>
