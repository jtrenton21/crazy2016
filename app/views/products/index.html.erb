<div  style="text-align:center; min-height:500px;" id="dg ">
    <p><%= search_form_for @search, url: search_products_path, method: :post do |f| %>
            <a id='gddown'><%= f.select :category_id_eq, options_from_collection_for_select(Category.all, "id", "name",  @search.category_id_eq),({:include_blank => 'All Merchandise'})  %></a>
            <% f.condition_fields do |c| %>
              <%= render "condition_fields", f: c %>
            <% end %>
            <button id="sbut" class="btn btn-default" type="submit">Search</button></p>
          <% end %>
    
    <div class="container">
		<% for product in @products %>
  <div class="product">
    <p id='image2'><%= image_tag product.image.url(:image) %></p>
    <h3>
      <%= link_to h(product.name), product %>
      <%= number_to_currency(product.price) %>
    </h3>
    <div class="actions">
      <%= link_to "Add to Cart", line_items_path(:product_id => product), :method => :post %>
    </div>
  </div>
<% end %>

	</div>
</div>
